<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="boton_menu_central" TargetType="RadioButton">
        <Setter Property="Height" Value="75"/> 
        <Setter Property="Width" Value="75"/>
        <Setter Property="Cursor" Value="Hand"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Border x:Name="border" BorderThickness="0"
                            Background="{TemplateBinding Background}"/>
                </ControlTemplate>
            </Setter.Value>

        </Setter>
        
        
        <!--INICIO ANIMACAO-->

        <Style.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(RadioButton.Width)"
                                         To="100"
                                         Duration="0:0:0.2"/>

                        <DoubleAnimation Storyboard.TargetProperty="(RadioButton.Height)"
                                         To="100"
                                         Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
                
            </EventTrigger>



            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(RadioButton.Width)"
                             To="75"
                             Duration="0:0:0.2"/>

                        <DoubleAnimation Storyboard.TargetProperty="(RadioButton.Height)"
                             To="75"
                             Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>

            </EventTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>