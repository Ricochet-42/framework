    <Style x:Key="txt_nombre" TargetType="TextBox">
        <Setter Property="Background" Value="#FF333333"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CaretBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        SnapsToDevicePixels="True">
                        <Grid>
                            <!-- NECESARIO para que el TextBox funcione -->
                            <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="0" Focusable="False"/>

                            <!-- Bordes decorativos -->
                            <Border IsHitTestVisible="False"
                                BorderBrush ="#FF90CF8F"
                                BorderThickness="0,0,0,2"
                                VerticalAlignment="Bottom"/>
                            <Border IsHitTestVisible="False"
                                BorderBrush="#FF90CF8F"
                                BorderThickness="2,0,0,0"
                                HorizontalAlignment="Left"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover: cambia el fondo; el texto sigue blanco -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF90CF8F"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="CaretBrush" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>