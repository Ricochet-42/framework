<Window x:Class="Framework1.principal.form_principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Framework1.principal"
        mc:Ignorable="d"
        Title="form_principal" Height="450" Width="800" Background="#FF272525">
    <Border CornerRadius="0"
       
     BorderThickness="10" Height="433">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="LightBlue" Offset="0.0"/>
                <GradientStop Color="LightGreen" Offset="0.8"/>

            </LinearGradientBrush>
        </Border.BorderBrush>


        <Grid x:Name="grid_menus" Background="#4A4A4A" 
              VerticalAlignment="Center"
              HorizontalAlignment="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <RadioButton x:Name="boton_home"
                         Grid.Column="0"
                         Grid.Row="0" Checked="boton_home_Checked" Click="boton_home_Click">
                <RadioButton.Background >
                    <ImageBrush ImageSource="/img/programador.png"
                                Stretch="Uniform"/>
                </RadioButton.Background>

                <RadioButton.Style>
                    <Style TargetType="RadioButton"
                           BasedOn="{StaticResource boton_menu_central}">
                        
                    </Style>
                </RadioButton.Style>
                
            </RadioButton>



            <RadioButton x:Name="boton_dos"
             Grid.Column="1"
             Grid.Row="0">
                <RadioButton.Background >
                    <ImageBrush ImageSource="/img/maestro.png"
                    Stretch="Uniform"/>
                </RadioButton.Background>

                <RadioButton.Style>
                    <Style TargetType="RadioButton"
               BasedOn="{StaticResource boton_menu_central}">

                    </Style>
                </RadioButton.Style>

            </RadioButton>

            <Label x:Name="etiqueta_menu"
                   Content="HOME"
                   Grid.Column="0"
                   Grid.Row="1"
                   HorizontalAlignment="Center"
                   Foreground="LightGreen"
                    FontSize="20"
                    FontStyle="Italic"
                    FontWeight="DemiBold"
                   ></Label>
            <Label x:Name="etiqueta_docente"
       Content="DOCENTE"
       Grid.Column="1"
       Grid.Row="1"
       HorizontalAlignment="Center"
       Foreground="LightGreen"
        FontSize="20"
        FontStyle="Italic"
        FontWeight="DemiBold"
       ></Label>
            <Label x:Name="etiqueta_calif"
       Content="CALIFICACION"
       Grid.Column="2"
       Grid.Row="1"
       HorizontalAlignment="Center"
       Foreground="LightGreen"
        FontSize="20"
        FontStyle="Italic"
        FontWeight="DemiBold"
       ></Label>
            <Label x:Name="etiqueta_becas"
       Content="BECAS"
       Grid.Column="0"
       Grid.Row="3"
       HorizontalAlignment="Center"
       Foreground="LightGreen"
        FontSize="20"
        FontStyle="Italic"
        FontWeight="DemiBold"
       ></Label>
            <Label x:Name="etiqueta_cons"
       Content="CONSTANCIAS"
       Grid.Column="1"
       Grid.Row="3"
       HorizontalAlignment="Center"
       Foreground="LightGreen"
        FontSize="20"
        FontStyle="Italic"
        FontWeight="DemiBold"
       ></Label>
            <Label x:Name="etiqueta_inci"
       Content="INCIDENTES"
       Grid.Column="2"
       Grid.Row="3"
       HorizontalAlignment="Center"
       Foreground="LightGreen"
        FontSize="20"
        FontStyle="Italic"
        FontWeight="DemiBold"
       ></Label>
            <Label x:Name="etiqueta_taller"
       Content="TALLERES"
       Grid.Column="0"
       Grid.Row="5"
       HorizontalAlignment="Center"
       Foreground="LightGreen"
        FontSize="20"
        FontStyle="Italic"
        FontWeight="DemiBold"
       ></Label>
            <Label x:Name="etiqueta_nomina"
       Content="NOMINA"
       Grid.Column="1"
       Grid.Row="5"
       HorizontalAlignment="Center"
       Foreground="LightGreen"
        FontSize="20"
        FontStyle="Italic"
        FontWeight="DemiBold"
       ></Label>
            <Label x:Name="etiqueta_eva"
       Content="EVALUACION"
       Grid.Column="2"
       Grid.Row="5"
       HorizontalAlignment="Center"
       Foreground="LightGreen"
        FontSize="20"
        FontStyle="Italic"
        FontWeight="DemiBold"
       ></Label>


            <RadioButton x:Name="boton_tres"
             Grid.Column="2"
             Grid.Row="0">
                <RadioButton.Background >
                    <ImageBrush ImageSource="/img/calificaciones.png"
                    Stretch="Uniform"/>
                </RadioButton.Background>

                <RadioButton.Style>
                    <Style TargetType="RadioButton"
               BasedOn="{StaticResource boton_menu_central}">

                    </Style>
                </RadioButton.Style>

            </RadioButton>






            <RadioButton x:Name="boton_cuatro"
             Grid.Column="0"
             Grid.Row="2">
                <RadioButton.Background >
                    <ImageBrush ImageSource="/img/beca-educativa.png"
                    Stretch="Uniform"/>
                </RadioButton.Background>

                <RadioButton.Style>
                    <Style TargetType="RadioButton"
               BasedOn="{StaticResource boton_menu_central}">

                    </Style>
                </RadioButton.Style>

            </RadioButton>



            <RadioButton x:Name="boton_cinco"
             Grid.Column="1"
             Grid.Row="2">
                <RadioButton.Background >
                    <ImageBrush ImageSource="/img/documento.png"
                    Stretch="Uniform"/>
                </RadioButton.Background>

                <RadioButton.Style>
                    <Style TargetType="RadioButton"
               BasedOn="{StaticResource boton_menu_central}">

                    </Style>
                </RadioButton.Style>

            </RadioButton>





            <RadioButton x:Name="boton_seis"
             Grid.Column="2"
             Grid.Row="2">
                <RadioButton.Background >
                    <ImageBrush ImageSource="/img/exclamacion.png"
                    Stretch="Uniform"/>
                </RadioButton.Background>

                <RadioButton.Style>
                    <Style TargetType="RadioButton"
               BasedOn="{StaticResource boton_menu_central}">

                    </Style>
                </RadioButton.Style>

            </RadioButton>

            
            
            
            

            <RadioButton x:Name="boton_siete"
             Grid.Column="0"
             Grid.Row="4">
                <RadioButton.Background >
                    <ImageBrush ImageSource="/img/mas (2).png"
                    Stretch="Uniform"/>
                </RadioButton.Background>

                <RadioButton.Style>
                    <Style TargetType="RadioButton"
               BasedOn="{StaticResource boton_menu_central}">

                    </Style>
                </RadioButton.Style>

            </RadioButton>











            <RadioButton x:Name="boton_ocho"
             Grid.Column="1"
             Grid.Row="4">
                <RadioButton.Background >
                    <ImageBrush ImageSource="/img/calculadora (1).png"
                    Stretch="Uniform"/>
                </RadioButton.Background>

                <RadioButton.Style>
                    <Style TargetType="RadioButton"
               BasedOn="{StaticResource boton_menu_central}">

                    </Style>
                </RadioButton.Style>

            </RadioButton>






            <RadioButton x:Name="boton_nueve"
             Grid.Column="2"
             Grid.Row="4">
                <RadioButton.Background >
                    <ImageBrush ImageSource="/img/sonreir.png"
                    Stretch="Uniform"/>
                </RadioButton.Background>

                <RadioButton.Style>
                    <Style TargetType="RadioButton"
               BasedOn="{StaticResource boton_menu_central}">

                    </Style>
                </RadioButton.Style>

            </RadioButton>


        </Grid>
    
    </Border>
</Window>
