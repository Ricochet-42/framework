<Window x:Class="Framework1.usuarios.EditMaestroDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar maestro" Height="360" Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="ID" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox   x:Name="txtId" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" IsReadOnly="True"/>

        <TextBlock Text="Nombre" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox   x:Name="txtNombre" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Text="Correo" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox   x:Name="txtCorreo" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Text="Facultad" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox   x:Name="txtFacultad" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Text="Tipo" Grid.Row="4" Grid.Column="0" VerticalAlignment="Top" Margin="0,7,8,0"/>
        <ComboBox  x:Name="cmbTipo" Grid.Row="4" Grid.Column="1" Margin="0,0,0,120" IsEditable="False"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Width="90" Margin="0,8,8,0" IsCancel="True"/>
            <Button Content="Guardar"  Width="90" Margin="0,8,0,0"  IsDefault="True" Click="Guardar_Click"/>
        </StackPanel>
    </Grid>
</Window>
