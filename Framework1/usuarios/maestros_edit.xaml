<Window x:Class="Framework1.usuarios.maestros_edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Framework1.usuarios"
        mc:Ignorable="d"
        Title="maestros_edit" Height="450" Width="800" Background="#FF272525" Closing="Window_Closing">

    <Border CornerRadius="0" BorderThickness="10" Height="433">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="LightBlue" Offset="0.0"/>
                <GradientStop Color="LightGreen" Offset="0.8"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        
        <Grid x:Name="grid_control">
            <!--<Grid.ContextMenu>

                <ContextMenu Cursor="Hand">
                    
                    <Separator/>
                    <MenuItem Header="Editar…" Click="Editar_Click">
                        <MenuItem.Icon>
                            <Image Source="/imagenes/agregar.png" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Eliminar" Click="Eliminar_Click">
                        <MenuItem.Icon>
                            <Image Source="/imagenes/agregar.png" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <Separator/>
                     </ContextMenu>

            </Grid.ContextMenu>-->

            <Grid Margin="36,30,468,29" Style="{StaticResource contenedor1}" Background="#FF333333">

                <StackPanel Style="{StaticResource subcontenedor1}" Margin="40,27,40,43" Background="#FF333333">
                    <Label Content="Ingreso Maestros" Foreground="LightGreen" FontSize="20"
                           FontStyle="Italic" FontWeight="DemiBold" HorizontalAlignment="Center"/>

                    <Label Content="Nombre" Foreground="LightGreen"/>
                    <TextBox x:Name="txt_nombre" Width="184" Style="{StaticResource txt_nombre}" Height="25"/>

                    <Label Content="Correo" Foreground="LightGreen"/>
                    <TextBox x:Name="txt_correo" Width="185" Style="{StaticResource txt_nombre}" Height="25"/>

                    <Label Content="Facultad" Foreground="LightGreen"/>
                    <TextBox x:Name="txt_facultad" Width="185" Style="{StaticResource txt_nombre}" Height="25"/>

                    <Label Content="Tipo" Foreground="LightGreen"/>
                    <TextBox x:Name="txt_tipo" Width="185" Style="{StaticResource txt_nombre}" Height="25"/>
                </StackPanel>

                <StackPanel Margin="308,0,-430,0" Background="#FF90CF8F" Height="354" VerticalAlignment="Center">
                    <DataGrid x:Name="grid_maestros"
          Margin="20" Width="358" Height="200"
          AutoGenerateColumns="False" IsReadOnly="True"
          SelectionMode="Single" SelectionUnit="FullRow" Cursor="Hand"
          SelectionChanged="grid_maestros_SelectionChanged">

                        <!-- Seleccionar la fila bajo el cursor con clic derecho -->
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <EventSetter Event="MouseRightButtonDown" Handler="Row_RightClick_Select"/>
                            </Style>
                        </DataGrid.Resources>

                        <!-- Menú contextual dentro del DataGrid -->
                        <DataGrid.ContextMenu>
                            <ContextMenu Opened="ContextMenu_Opened" Cursor="Hand">
                                <MenuItem x:Name="ctxEditar" Header="Editar…" Click="Editar_Click">
                                    <MenuItem.Icon>
                                        <Image  Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem x:Name="ctxEliminar" Header="Eliminar" Click="Eliminar_Click">
                                    <MenuItem.Icon>
                                        <Image  Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>

                        <!-- IMPORTANTE: DataTable usa columnas en MAYÚSCULAS -->
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID"       Binding="{Binding [ID]}"       Width="Auto"/>
                            <DataGridTextColumn Header="Nombre"   Binding="{Binding [NOMBRE]}"   Width="*"/>
                            <DataGridTextColumn Header="Correo"   Binding="{Binding [CORREO]}"   Width="*"/>
                            <DataGridTextColumn Header="Facultad" Binding="{Binding [FACULTAD]}" Width="*"/>
                            <DataGridTextColumn Header="Tipo"     Binding="{Binding [TIPO]}"     Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>

                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
